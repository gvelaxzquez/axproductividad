                                                <label class="switch switch-small">
                                                    <input type="checkbox" checked id="ChkDAcceder" />
                                                    <span></span>
                                                </label>Acceder
                                            </th>
                                            <th>
                                                <label class="switch switch-small">
                                                    <input type="checkbox" checked id="ChkDGuardar" />
                                                    <span></span>
                                                </label>Guardar
                                            </th>
                                            <th>
                                                <label class="switch switch-small">
                                                    <input type="checkbox" checked id="ChkDEditar" />
                                                    <span></span>
                                                </label>Editar
                                            </th>
                                            <th>
                                                <label class="switch switch-small">
                                                    <input type="checkbox" checked id="ChkDImprimir" />
                                                    <span></span>
                                                </label>Imprimir
                                            </th>
                                            <th>
                                                <label class="switch switch-small">
                                                    <input type="checkbox" checked id="ChkDEliminar" />
                                                    <span></span>
                                                </label>Eliminar
                                            </th>

                                        </tr>
                                    </thead>
                                    <tbody>


                                        <tr>
                                            <td>Usuarios</td>

                                            <td>
