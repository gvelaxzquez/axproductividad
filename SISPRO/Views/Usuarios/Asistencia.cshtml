
<div class="modal" id="ModalAsistencia" tabindex="-1" role="dialog" aria-labelledby="largeModalHead" aria-hidden="true" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" ><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                @*<h4 class="modal-title">Detalle actividades</h4>*@
            </div>
            <div class="modal-body">
                <!--inicia-->
                <div class="row">
                    <div class="list-group list-group-contacts border-bottom">
                        <a href="#" class="list-group-item">

                            <span class="contacts-title">Entrada</span>
                            <p id="LblHoraEntrada">Sin registrar</p>
                            <div class="list-group-controls">
                                <button id="BtnRegistrarEntrada" class="btn btn-info " onclick="RegistrarAsistencia(1)"><span class="fa fa-play"></span></button>
                                <button id="BtnOkRegistrarEntrada" class="btn btn-success" ><span class="fa fa-check"></span></button>
                            </div>
                        </a>
                        <a href="#" class="list-group-item">

                            <span class="contacts-title">Salida a comer</span>
                            <p id="LblHoraSalidaComer"> Sin registrar</p>
                            <div class="list-group-controls">
                                <button id="BtnRegistrarSalidaComer" class="btn btn-info" onclick="RegistrarAsistencia(2)"><span class="fa fa-pause"></span></button>
                                <button id="BtnOkRegistrarSalidaComer" class="btn btn-success"><span class="fa fa-check"></span></button>
                            </div>
                        </a>
                        <a href="#" class="list-group-item">

                            <span class="contacts-title">Regreso de comer</span>
                            <p id="LblHoraEntradaComer"> Sin registrar</p>
                            <div class="list-group-controls">
                                <button id="BtnRegistrarEntradaComer" class="btn btn-info" onclick="RegistrarAsistencia(3)"><span class="fa fa-play"></span></button>
                                <button id="BtnOkRegistrarEntradaComer" class="btn btn-success"><span class="fa fa-check"></span></button>
                            </div>
                        </a>
                        <a href="#" class="list-group-item">

                            <span class="contacts-title">Salida</span>
                            <p id="LblHoraSalida">Sin registrar</p>
                            <div class="list-group-controls">
                                <button id="BtnRegistrarSalida" class="btn btn-info" onclick="RegistrarAsistencia(4)"><span class="fa fa-stop"></span></button>
                                <button id="BtnOkRegistrarSalida" class="btn btn-success"><span class="fa fa-check"></span></button>
                            </div>
                        </a>

                    </div>
                </div>
                <!--termina-->
            </div>
        </div>
    </div>
</div>


<input type="hidden" id="urlConsultaAsistencia" value="@Url.Action("ConsultaAsistencia","Usuarios")" />
<input type="hidden" id="urlRegistraAsistencia" value="@Url.Action("RegistrarAsistencia","Usuarios")" />