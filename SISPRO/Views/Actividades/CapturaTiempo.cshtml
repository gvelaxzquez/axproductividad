
<div class="modal" id="ModalCapturarTiempo" tabindex="-1" role="dialog" aria-labelledby="defModalHead" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="TituloRec">Enviar tarea a validación</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <form class="form-horizontal">
                        <div class="form-group">

                            <label class="col-md-2 col-xs-12 control-label">Fecha fin</label>
                            <div class="col-md-6">
                                <div class="input-group">
                                    <input type="text" id="TxtFinActividad" class="form-control ReqCapturaT" item="Fecha" />
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="BtnGuardarCapturaT">Guardar</button>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="urlActualizaCapturaT" value="@Url.Action("SolicitaRevisionTablero","Actividades")" />
<input type="hidden" id="IdActividadCT" value="0" />


@{
    Random rnd = new Random();
    <script src="~/Scripts/Project/CapturaTiempo.js?@rnd.Next()"></script>

}

