
<div class="modal" id="ModalCapturarDefecto" tabindex="-1" role="dialog" aria-labelledby="defModalHead" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Capturar defecto</h4>
            </div>
            <div class="modal-body">
                <div class="row" style="margin-bottom:5px;">
                    <form class="form-horizontal">


                        <div class="form-group" style="margin-bottom:5px">

                            <div class="col-md-1">
                                &nbsp;
                            </div>
                            <div class="col-md-4">
                                <label class="control-label" for="SelTipoDefecto">Tipo</label>
                                <select class="form-control selectpicker ReqCapturaDefecto" id="SelTipoDefecto" item="Tipo">
                                    <option selected="selected" value="-1">--Seleccione--</option>

                                </select>
                            </div>
                            <div class="col-md-1">
                                &nbsp;
                            </div>
                            <div class="col-md-4">
                                <label class="control-label" for="TxtFechaDefecto">Fecha</label>
                                <input type="date" id="TxtFechaDefecto" class="form-control ReqTrab" item="Fecha" />
                                @*<span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>*@

                            </div>


                        </div>
                        <div class="form-group" style="margin-bottom:10px">

                            <div class="col-md-1">
                                &nbsp;
                            </div>
                            <div class="col-md-4">
                                <label class="control-label" for="SelFaseI">Inyectado</label>
                                <select class="form-control selectpicker ReqCapturaDefecto" id="SelFaseI" item="Fase inyección">
                                    <option selected="selected" value="-1">--Seleccione--</option>

                                </select>
                            </div>
                            <div class="col-md-1">
                                &nbsp;
                            </div>
                            <div class="col-md-4">
                                <label class="control-label" for="SelFaseR">Eliminado</label>
                                <select class="form-control selectpicker ReqCapturaDefecto" id="SelFaseE" item="Fase elminación">
                                    <option selected="selected" value="-1">--Seleccione--</option>

                                </select>

                            </div>


                        </div>
                        <div class="form-group" style="margin-bottom:10px">
                            <div class="col-md-1">
                                &nbsp;
                            </div>
                            <div class="col-md-9">
                                <label class="control-label" for="TxtDescripcionDefecto">Descripción</label>
                                <textarea class="form-control ReqCapturaDefecto" id="TxtDescripcionDefecto" rows="3" style="min-width:100%" item="Descripción"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-1">
                                &nbsp;
                            </div>
                            <div class="col-md-9">
                                <div id="chrono-defecto" class="chronodefecto">

                                    <div class="chrono-container">
                                        <div data-hours="0" id="chrono-defectohour" class="chrono-hour">00</div>
                                        <div class="chrono-divider">:</div>
                                        <div data-minutes="0" id="chrono-defectominute" class="chrono-minute">00</div>
                                        <div class="chrono-divider">:</div>
                                        <div data-seconds="0" id="chrono-defectosecond" class="chrono-second">00</div>
                                    </div>
                                    <button id="btnTrackBug" data-id="0" data-stage="Bug" data-initial-seconds="0" class="chrono-start btn btn-success">Iniciar</button>
                                </div>

                            </div>
                        </div>





                    </form>
                </div>
                <br />

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="BtnGuardarDefecto">Guardar<span class="fa fa-bug fa-right"></span></button>
            </div>
        </div>
    </div>
</div>



