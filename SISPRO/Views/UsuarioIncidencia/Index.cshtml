
@{
    ViewBag.Title = "Incidencias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<div class="page-title">
    <h2><span class="fa  fa-certificate"></span> Incidencias</h2>
</div>*@


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div>
                    <button class="btn btn-success pull-right" id="BtnNuevoInc">Nuevo</button><br /><br />
                </div>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table datatable text" id="TblIncidencias">
                        <thead>
                            <tr>
                                <th>Recurso</th>
                                <th>Tipo incidencia</th>
                                <th>Fecha inicio</th>
                                <th>Fecha fin</th>
                                <th>Días</th>
                                <th>Editar</th>
                                <th>Eliminar</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

<div class="modal" id="ModalIncidencias" tabindex="-1" role="dialog" aria-labelledby="defModalHead" aria-hidden="true" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="defModalHead">Incidencias</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">

                        <form class="form-horizontal">
                            <div class="form-group">
                                <div>
                                    <label class="col-md-3 col-xs-12 control-label " >Recurso*</label>
                                    <div class="col-md-8 col-xs-12">

                                        <select class="form-control ReqIncidencia" id="SelUsuario" item="Recurso"></select>
                                    </div>

                                </div>
                            </div>
                            <div class="form-group">
                                <div>
                                    <label class="col-md-3 col-xs-12 control-label ">Tipo incidencia*</label>
                                    <div class="col-md-8 col-xs-12">

                                        <select class="form-control ReqIncidencia" id="SelTipoIncidencia" item="Tipo incidencia"></select>
                                    </div>

                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Fecha inicio*</label>
                                <div class="col-md-4 col-xs-12">
                                    <div class="input-group">
                                        <input type="text" id="TxtFechaIniInc" class="form-control ReqIncidencia" item="Fecha inicio" />
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Fecha fin*</label>
                                <div class="col-md-4 col-xs-12">
                                    <div class="input-group">
                                        <input type="text" id="TxtFechaFinInc" class="form-control ReqIncidencia" item="Fecha fin" />
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 col-xs-12 control-label">Días considerar*</label>
                                <div class="col-md-6 col-xs-12">
                                    <input type="number" step="0.01" class="form-control ReqIncidencia" id="TxtDiasConsiderar" item="Horas asignadas" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 col-xs-12 control-label">Comentarios</label>
                                <div class="col-md-6 col-xs-12">
                                    <textarea class="form-control" rows="5" id="TxtComentarios"> </textarea>
  
                                </div>
                            </div>


                        </form>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="BtnGuardarInc">Guardar<span class="fa fa-floppy-o fa-right"></span></button>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="IdIncidencia" value="0" />
<input type="hidden" id="IdIncidenciaCancelar" value="0" />

<script type="text/javascript" src="~/Scripts/Project/UsuarioIncidencias.js"></script>

<input type="hidden" id="urlCargaInicialInc" value="@Url.Action("ConsultaIncidencias","UsuarioIncidencia")" />
<input type="hidden" id="urlGuardarIncidencia" value="@Url.Action("GuardarIncidencia","UsuarioIncidencia")" />
<input type="hidden" id="urlEliminarIncidencia" value="@Url.Action("EliminarIncidencia","UsuarioIncidencia")" />




