
@{
    ViewBag.Title = "Retroalimentación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-title">
    <h2>Retroalimentación</h2>
</div>


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div>
                    <button class="btn btn-success pull-right" id="BtnNuevoPreg">Nuevo</button><br /><br />
                </div>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table datatable text" id="TblPreguntas">
                        <thead>
                            <tr>
                                <th>Pregunta</th>
                                <th>Fecha inicio</th>
                                <th>Fecha fin</th>
                                <th>Editar</th>
                                <th>Respuestas</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

<div class="modal" id="ModalPreguntas" tabindex="-1" role="dialog" aria-labelledby="defModalHead" aria-hidden="true" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="defModalHead">Pregunta</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">

                        <form class="form-horizontal">
     

                            <div class="form-group">
                                <label class="col-md-3 col-xs-12 control-label">Pregunta</label>
                                <div class="col-md-6 col-xs-12">
                                    <textarea class="form-control ReqPregunta" rows="5" id="TxtPregunta" item="Pregunta" > </textarea>

                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Fecha inicio*</label>
                                <div class="col-md-4 col-xs-12">
                                    <div class="input-group">
                                        <input type="text" id="TxtFechaIniPreg" class="form-control ReqPregunta" item="Fecha inicio" />
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Fecha cierre*</label>
                                <div class="col-md-4 col-xs-12">
                                    <div class="input-group">
                                        <input type="text" id="TxtFechaFinPreg" class="form-control ReqPregunta" item="Fecha fin" />
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                    </div>
                                </div>
                            </div>




                        </form>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="BtnGuardarPregunta">Guardar<span class="fa fa-floppy-o fa-right"></span></button>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="ModalPreguntaRespuesta" tabindex="-1" role="dialog" aria-labelledby="defModalHead" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="TituloRec">Respuestas</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <h4 class="col-md-1 col-xs-12 control-label">Pregunta:</h4>
                            <h4 class="col-md-11 col-xs-12 control-label" style="text-align:left" id="LblPregunta"></h4>
                        </div>

                    </form>
                </div>
                <br />
                <div class="row" style="padding-top:2em;">
                    <div class="table-responsive">
                        <table class="table datatable text" id="TblRespuestas">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Colaborador</th>
                                    <th>Fecha</th>
                                    <th width="40%">Comentario</th>

                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<input type="hidden" id="IdPregunta" value="0" />
<input type="hidden" id="urlCargaPreguntas" value="@Url.Action("ConsultaPreguntas","CatalogoGeneral")" />
<input type="hidden" id="urlGuardarPregunta" value="@Url.Action("GuardarPregunta","CatalogoGeneral")" />
<input type="hidden" id="urlCargaPreguntaRespuestas" value="@Url.Action("ConsultaPreguntasRespuestas","CatalogoGeneral")" />

@{
    Random rnd = new Random();
    @*<script src="~/Scripts/Project/Retroalimentacion.js"></script>*@
    <script src="~/Scripts/Project/Retroalimentacion.js?@rnd.Next()"></script>


}