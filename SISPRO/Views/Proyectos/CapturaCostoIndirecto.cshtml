<div class="modal" id="ModalCapturarCostoIndirecto" tabindex="-1" role="dialog" aria-labelledby="defModalHead" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="">Capturar costo indirecto</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <form class="form-horizontal">

                        <div class="form-group">
                            <label class="col-md-2 col-xs-12 control-label">Fase*</label>
                            <div class="col-md-6">
                                <select class="form-control selectpicker" data-live-search="true" id="SelActividadCI" item="Tipo actividad"></select>
                            </div>

                        </div>
                        <div class="form-group">
                            <label class="col-md-2 col-xs-12 control-label">Fecha </label>
                            <div class="col-md-3 col-xs-12">
                                <div class="input-group">
                                    <input type="text" id="TxtFechaCI" class="form-control ReqCostoInd" item="Fecha" />
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                </div>
                            </div>

                        </div>


                        <div class="form-group">
                            <label class="col-md-2 col-xs-12 control-label">Concepto*</label>

                            <div class="col-md-8 col-xs-12">
                                <textarea maxlength="2000" rows="4" class="form-control ReqCostoInd" id="TxtConceptoCI" item="Concepto"> </textarea>
                            </div>


                        </div>
                        <div class="form-group">
                            <label class="col-md-2 col-xs-12 control-label">Monto*</label>

                            <div class="col-md-3 col-xs-12">
                                <input type="number" step="0.01" class="form-control ReqCostoInd" id="TxtMontoCI" item="Monto" />
                            </div>


                        </div>


                    </form>
                </div>
                <br />

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="BtnGuardarCostoIndirecto">Guardar<span class="fa fa-floppy-o fa-right"></span></button>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="IdProyectoCostoInd" value="0" />
<input type="hidden" id="IdProyectoCI" value="0" />

<input type="hidden" id="urlRegistraCostoInd" value="@Url.Action("GuardarCostoIndirecto","Proyectos")" />
<input type="hidden" id="urlCargaInicialCapturaCostoIndirecto" value="@Url.Action("CargaInicialCosto","Proyectos")" />
<input type="hidden" id="urlConsultaCostoIndirecto" value="@Url.Action("ConsultaCostoIndirecto","Proyectos")" />




@{
    Random rnd = new Random();
    <script src="~/Scripts/Project/CapturaCostoIndirecto.js?@rnd.Next()"></script>

}




