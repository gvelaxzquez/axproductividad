
@{
    ViewBag.Title = "Reporte general de proyectos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-title">
    <h2><span class="fa fa-tasks"></span> Reporte general de proyectos</h2>
</div>

<div class="page-content-wrap">

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-group accordion accordion-dc">

                        <div class="panel panel-colorful">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a href="#accTwoColSeven">
                                        Filtros
                                    </a>
                                </h4>
                            </div>
                            <div class="panel-body panel-body-open" id="accTwoColSeven">
                                <!--inicia-->
                                <div class="row">
                                    <div class="col-md-8">
                                        <div>
                                            <button class="btn btn-success pull-right" id="BtnFiltrarRepProy">Filtrar</button><br /><br />
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-1 control-label">Fecha corte</label>
                                            <div class="col-md-3 col-xs-12">
                                                <div class="input-group">
                                                    <input type="text" id="TxtFechaCorte" class="form-control ReqFiltroRep" item="Fecha corte" />
                                                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                            </div>
                        </div>

                    </div>

                </div>

                <div class="row">
                    <div class="col-md-12">

                        <form class="form-horizontal">
                            <div class="form-group">

                                <div class="btn-group pull-right">
                                    <button class="btn btn-danger dropdown-toggle" data-toggle="dropdown"><i class="fa fa-bars"></i> Exportar</button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="#" onclick="$('#TblReporteProyectosExportar').removeClass('hide'); $('#TblReporteProyectosExportar').tableExport({ type: 'excel', escape: 'false' }); $('#TblReporteProyectosExportar').addClass('hide');"><img src='~/Content/Project/Imagenes/xls.png' width="24" /> XLS</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                        </form>

                    </div>
                </div>
                <br />
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table datatable text" id="TblReporteProyectos">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Clave</th>
                                    <th>Proyecto</th>
                                    <th>Líder</th>
                                    <th>Horas Proyectadas</th>
                                    <th>Avance comprometido</th>
                                    <th>Avance actual</th>
                                    <th>Desfase</th>
                                    <th>% Avance</th>
                                    <th>% Comprometido</th>
                                    <th>% Desfase</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<table class="table datatable text hide" id="TblReporteProyectosExportar">
    <thead>
        <tr>
            
            <th>Clave</th>
            <th>Proyecto</th>
            <th>Líder</th>
            <th>Horas Proyectadas</th>
            <th>Avance comprometido</th>
            <th>Avance actual</th>
            <th>Desfase</th>
            <th>% Avance</th>
            <th>% Comprometido</th>
            <th>% Desfase</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>


<input type="hidden" id="urlConsultaReporteHoras" value="@Url.Action("ConsultaRepGeneralProyectos","Report")" />
<input type="hidden" id="urlVerProyecto" value="@Url.Action("Proyecto","Proyectos")" />

<script type="text/javascript" src="~/Scripts/Project/ResumenProyectos.js"></script>


<script src="~/Scripts/TableExport-master/tableExport.js"></script>
<script src="~/Scripts/TableExport-master/jquery.base64.js"></script>
<script src="~/Scripts/TableExport-master/html2canvas.js"></script>
<script src="~/Scripts/TableExport-master/jspdf/libs/sprintf.js"></script>
<script src="~/Scripts/TableExport-master/jspdf/jspdf.js"></script>
<script src="~/Scripts/TableExport-master/jspdf/libs/base64.js"></script>


